<h1>My Friends</h1>
<h3>Search for friends</h3>
<div id="stock-lookup">
  <%= form_tag search_friends_path, remote: true, method: :get, id: "friend-lookup-form" do %>
    <div class="row">
      <div class="form-group no-padding text-center col-md-12">
        <div class="col-md-10">
          <%= text_field_tag :search_params, params[:search_param], placeholder: "Enter name or email", autofocus: true,
                                     class: "form-control search-box input-lg" %>
        </div>
        <div class="col-md-2">
          <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
            <i class="fa fa-search"></i>
            Search
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div id="results" >
  <%= render 'friends/result' %>
</div>